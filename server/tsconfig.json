{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../.dist",
    "target": "es2017",
    "isolatedModules": false,
    "noEmit": false,
    "esModuleInterop": true,
    "baseUrl": "../",
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["../server/*", "../declarations/*"],
  "exclude": ["../node_modules"]
}
